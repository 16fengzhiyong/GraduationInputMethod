<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nuc.omeletteinputmethod">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/jiandan"
        android:label="@string/app_name"
        android:roundIcon="@drawable/jiandan"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.nuc.omeletteinputmethod.MainActivity">

        </activity>
        <activity android:name="com.nuc.omeletteinputmethod.FirstActivity">
        </activity>
        <activity android:name="com.nuc.omeletteinputmethod.SettingsActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="com.nuc.omeletteinputmethod.kernel.OmeletteIME"
            android:label="@string/english_ime_name"
            android:permission="android.permission.BIND_INPUT_METHOD">
            <intent-filter>
                <action android:name="android.view.InputMethod" />
            </intent-filter>
            <meta-data
                android:name="android.view.im"
                android:resource="@xml/method"/>
        </service>
    </application>

</manifest>