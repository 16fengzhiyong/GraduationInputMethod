<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_float_schedule_parent"
    android:visibility="gone"
    android:layout_width="200dp"
    android:background="#ffffff"
    android:layout_height="270dp">



    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="270dp"
        android:background="#00FFFFFF"
        >
        <RelativeLayout
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="6dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="6dp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true">

                    <com.nuc.omeletteinputmethod.floatwindow.view.wheelview.WheelItemView
                        android:id="@+id/wheel_view_left"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        app:wheelItemVerticalSpace="3dp"
                        app:wheelShowCount="5"
                        app:wheelTotalOffsetX="4dp" />

                    <com.nuc.omeletteinputmethod.floatwindow.view.wheelview.WheelItemView
                        android:id="@+id/wheel_view_center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        app:wheelItemVerticalSpace="3dp"
                        app:wheelShowCount="5" />

                    <com.nuc.omeletteinputmethod.floatwindow.view.wheelview.WheelItemView
                        android:id="@+id/wheel_view_right"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        app:wheelItemVerticalSpace="3dp"
                        app:wheelShowCount="5"
                        app:wheelTotalOffsetX="-4dp" />

                </LinearLayout>
                <EditText
                    android:id="@+id/id_float_schedule_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </EditText>
                <Button
                    android:id="@+id/id_float_schedule_button"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:text="添加"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </RelativeLayout>
        <ImageView
            android:id="@+id/id_float_schedule_close"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/ic_close"
            />

    </RelativeLayout>

</LinearLayout>
