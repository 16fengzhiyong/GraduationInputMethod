<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TextAppearance_TitleBar_Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!-- title文字样式（和toolbar自带样式一样，可自行修改） -->
        <item name="android:textSize">17sp</item>
        <!--toolbar标题文字颜色-->
        <item name="android:textColor">@color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>
    <style name="tab_main">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingBottom">4.5dip</item>
        <item name="android:paddingTop">7.5dip</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/main_tab_text_color</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
    </style>
    <style name="tab_main2">
        <item name="android:paddingBottom">4.5dip</item>
        <item name="android:paddingTop">7.5dip</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/main_tab_text_color</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
    </style>

    <style name="weekIndicatorStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#ff25adff</item>
    </style>
</resources>
