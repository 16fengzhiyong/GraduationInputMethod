<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MyKeyboard">
        <!-- 键盘的高度 -->
        <attr name="keyboard_height" format="dimension|fraction" />
        <!-- 键盘的宽度 -->
        <attr name="keyboard_width" format="dimension|fraction" />
    </declare-styleable>
    <declare-styleable name="MyKeyboardRow">
        <!-- 行的高度 -->
        <attr name="rowHeight" format="dimension|fraction" />
        <attr name="rowVerticalGap" format="dimension|fraction" />
    </declare-styleable>
    <declare-styleable name="MyKeyboard_Key">
        <attr name="keyStyle">
            <enum name="nomal" value="0"/>
            <enum name="special" value="1"/>
            <enum name="symbols" value="2"/>
        </attr>
        <attr name="ifimagekey" format="boolean"/>
        <attr name="imgresource" format="reference"/>
        <!--  开始的位置-->
        <attr name="startingPosition" format="fraction"/>
        <!-- {@link com.nuc.omeletteinputmethod.kernel.keyboard.KeyboardTextsTable.class}
             对应其code，获取后解析  -->
        <attr name="altCode" format="integer" />
        <!-- 更多按键，长按时显示
            {@link com.nuc.omeletteinputmethod.kernel.keyboard.KeyboardTextsTable.class}-->
        <attr name="moreKeys" format="string" />
        <!-- 需要在键盘上显示的键 -->
        <attr name="keySpec" format="string" />
        <!--  左右距离百分比   -->
        <attr name="padding" format="dimension|fraction" />
        <!--   键的宽和高   -->
        <attr name="length" format="fraction" />
        <attr name="height" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CircularImageView">
        <attr name="is_circle" format="boolean" />
        <attr name="is_cover_src" format="boolean" />
        <attr name="corner_radius" format="dimension" />
        <attr name="corner_top_left_radius" format="dimension" />
        <attr name="corner_top_right_radius" format="dimension" />
        <attr name="corner_bottom_left_radius" format="dimension" />
        <attr name="corner_bottom_right_radius" format="dimension" />
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="inner_border_width" format="dimension" />
        <attr name="inner_border_color" format="color" />
        <attr name="mask_color" format="color" />
    </declare-styleable>
    <declare-styleable name="WheelView">
        <attr name="wheelTextColor" format="color"/>
        <attr name="wheelTextSize" format="dimension"/>
        <attr name="wheelShowCount" format="integer"/>
        <attr name="wheelTotalOffsetX" format="dimension"/>
        <attr name="wheelItemVerticalSpace" format="dimension"/>
        <attr name="wheelRotationX" format="float"/>
        <attr name="wheelVelocityUnits" format="integer"/>
    </declare-styleable>

    <declare-styleable name="WheelMaskView">
        <attr name="wheelMaskLineColor" format="color"/>
    </declare-styleable>

</resources>
